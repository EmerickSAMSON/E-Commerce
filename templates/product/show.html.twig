{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<h1>{{product.name}}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Description</th>
				<td>{{ product.description }}</td>
			</tr>
			<tr>
				<th>Images</th>
				<td><img style="width: 300px" src="{{ asset('uploads/images/' ~ product.images)}}" alt="{{product.name}}"></td>
			</tr>
			<tr>
				<th>PrixTTC</th>
				<td>{{ product.prixTTC|format_number({fraction_digit: 2}) }}
					€</td>
			</tr>
			<tr>
				<th>PrixHT</th>
				<td>{{ product.prixHT|format_number({fraction_digit: 2}) }}
					€</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_product_index') }}">Retour à la liste des produits</a>

	<a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

	<a href="{{ path('panier_add', {'id': product.id}) }}">Ajouter au panier</a>
	{{ include('product/_delete_form.html.twig') }}
{% endblock %}
