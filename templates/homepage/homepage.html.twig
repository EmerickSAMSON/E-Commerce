					<h3>{{product.name}}</h3>
					<img src="{{asset('uploads/images/' ~ product.images) }}" alt="{{product.name}}">
					<p>{{product.description}}</p>
					<p>{{ product.prixTTC|format_number({fraction_digit: 2}) }}â‚¬</p>
